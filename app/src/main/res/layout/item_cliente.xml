<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppCardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_cliente_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Nome Completo do Cliente"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_cliente_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ID: 123"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/text_cliente_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Email: cliente@example.com"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/text_cliente_contato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Contato: (00) 12345-6789"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:layout_marginTop="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_excluir_cliente"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:text="Excluir"
            app:icon="@android:drawable/ic_menu_delete"
            android:textColor="?attr/colorError"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>