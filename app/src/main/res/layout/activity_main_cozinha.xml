<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    tools:context="projetofinal.main.MainCozinhaActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarMainCozinha"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Painel da Cozinha" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Painel da Cozinha"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btnReceberComandas"
            style="@style/AppButtonStyle.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cozinha_receber_comandas"
            app:icon="@android:drawable/ic_menu_sort_by_size"/>

        <Button
            android:id="@+id/btnLogoutCozinha" style="@style/AppButtonStyle.Danger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout_button"
            android:layout_marginTop="24dp"
            app:icon="@android:drawable/ic_lock_power_off"/>
    </LinearLayout>

</LinearLayout>
