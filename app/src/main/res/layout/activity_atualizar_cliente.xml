<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atualizar Cliente"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="24dp"/>

        <!-- Campo para o ID do Cliente -->
        <EditText
            android:id="@+id/edtId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID do Cliente"
            android:inputType="number"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:layout_marginTop="8dp" />


        <!-- Botão para Buscar Cliente -->
        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar Cliente"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:padding="12dp" />

        <!-- Campo para o Nome do Cliente -->
        <EditText
            android:id="@+id/edtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Cliente"
            android:inputType="textPersonName"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:layout_marginTop="16dp" />

        <!-- Campo para o E-mail do Cliente -->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@android:color/white"/>


        <!-- Campo para o Contato do Cliente -->
        <EditText
            android:id="@+id/edtContato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contato"
            android:inputType="phone"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:layout_marginTop="8dp" />

        <!-- Campo para a Senha do Cliente -->
        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nova Senha (opcional)"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:layout_marginTop="8dp" />

        <!-- Botão para Atualizar Cliente -->
        <Button
            android:id="@+id/btnAtualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atualizar"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            android:padding="14dp"/>
    </LinearLayout>
</ScrollView>
