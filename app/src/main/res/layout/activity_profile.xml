<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    tools:context=".main.ProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarProfile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Meu Perfil" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textAppearance="?attr/textAppearanceLabelMedium" />

        <TextView
            android:id="@+id/textViewProfileNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Nome do Cliente"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textAppearance="?attr/textAppearanceLabelMedium" />

        <TextView
            android:id="@+id/textViewProfileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="cliente@email.com"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contato"
            android:textAppearance="?attr/textAppearanceLabelMedium" />

        <TextView
            android:id="@+id/textViewProfileContato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(21) 98765-4321"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnEditarDados"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar meus dados"/>
    </LinearLayout>
</LinearLayout>